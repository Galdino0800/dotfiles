[global]
    ### EXIBIÇÃO E FONTE ###
    # JetBrains Mono é excelente para leitura rápida de notificações 
    font = JetBrains Mono 10
    
    # Permite negrito/itálico e define o formato: Título em negrito, corpo embaixo 
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    
    # Alinhamento e ordenação
    alignment = center
    sort = yes
    indicate_hidden = yes

    ### GEOMETRIA E POSIÇÃO ###
    # Largura de 300px e altura máxima de 120px 
    width = 300
    height = 120
    
    # Distância das bordas: 10px da direita e 50px do topo (evita cobrir a Polybar) [cite: 39]
    offset = 10x50
    origin = top-right
    
    # Espaçamento interno da notificação [cite: 41]
    padding = 12
    horizontal_padding = 12
    
    # Raio dos cantos (Arredondamento moderno) [cite: 40]
    corner_radius = 8

    ### ASPECTO VISUAL ###
    # Borda da janela de notificação [cite: 41, 42]
    frame_width = 2
    frame_color = "#81a1c1"
    separator_color = frame
    
    # Barras de progresso (Úteis para volume e brilho) [cite: 39]
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 1
    progress_bar_color = "#81a1c1"

    ### ÍCONES ###
    # Posição à esquerda e tamanho máximo [cite: 41]
    icon_position = left
    max_icon_size = 48
    
    # Caminhos para os ícones (Priorizando o tema Papirus se instalado) [cite: 41]
    icon_path = /usr/share/icons/Papirus/48x48/status/:/usr/share/icons/Papirus/48x48/devices/:/usr/share/icons/Papirus/48x48/apps/

    ### INTERAÇÃO (Mouse) ###
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

### NÍVEIS DE URGÊNCIA ###
# Cores baseadas no seu esquema escuro (Background #2E3440) [cite: 42]

[urgency_low]
    background = "#2E3440"
    foreground = "#ECEFF4"
    timeout = 5

[urgency_normal]
    background = "#2E3440"
    foreground = "#ECEFF4"
    timeout = 8

[urgency_critical]
    background = "#2E3440"
    foreground = "#ECEFF4"
    frame_color = "#BF616A"  # Borda vermelha para alertas críticos
    timeout = 0              # Notificações críticas não somem sozinhas