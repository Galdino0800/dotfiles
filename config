#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#  SCREENSHOOT
#~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

# 1. FullScreen (Salva e avisa)
bindsym Print exec --no-startup-id maim "$HOME/Imagens/Screenshots/$(date +%Y-%m-%d_%H%M%S).png" && notify-send "üì∏ Screenshot" "Captura da tela cheia salva."

# 2. Select Region (Salva e avisa)
# Adicionei o "-u" para o maim esconder o cursor do mouse na print
bindsym ctrl+Print exec --no-startup-id maim -s -u "$HOME/Imagens/Screenshots/$(date +%Y-%m-%d_%H%M%S).png" && notify-send "‚úÇÔ∏è Screenshot" "√Årea selecionada salva."

# 3. Screen Region then copy to clipboard (Apenas copia)
# Usei o "slop" (que o maim chama internamente) para uma sele√ß√£o mais suave
bindsym Mod4+Print exec --no-startup-id maim -s | xclip -selection clipboard -t image/png && notify-send "üìã Copiado" "A √°rea foi enviada para o clipboard."

